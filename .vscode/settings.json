{
   "[typescript]": {
      "editor.defaultFormatter": "vscode.typescript-language-features",
      "editor.tabSize": 2,
      "editor.insertSpaces": true,
      "editor.detectIndentation": false
   },
   "[javascript]": {
      "editor.tabSize": 2,
      "editor.insertSpaces": true,
      "editor.detectIndentation": false
   },
   "[typescriptreact]": {
      // for .tsx files
      "editor.defaultFormatter": "esbenp.prettier-vscode",
      "editor.tabSize": 2,
      "editor.formatOnSave": true
   }
}
